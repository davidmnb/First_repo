// Cache the DOM
document.addEventListener('DOMContentLoaded',function(){
var button= document.getElementById("button")
var nume= document.getElementById("nume")
var mail= document.getElementById("mail")
var asteptari= document.getElementById("asteptari")
var maintitle=document.getElementById("maintitle")
var isGradientSet=false;
// Add eventListener

button.addEventListener("click",AltaViata)

function AltaViata(){
	    if(isGradientSet){
	nume.innerHTML= "";
	mail.innerHTML="";
	asteptari.innerHTML="";
	maintitle.style.backgroundImage="none";
		}else{
	nume.innerHTML= "Functie:Senior Java Developer";
	mail.innerHTML="Email:Sabau.do.david@student.utcluj.ro";
	asteptari.innerHTML="asteptari";
	maintitle.style.backgroundImage="linear-gradient(to bottom right, #420D09,#8B0000,#DB0007)";
}
	
isGradientSet= !isGradientSet;}
});
